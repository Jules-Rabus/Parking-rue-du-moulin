<!DOCTYPE html>
    <head>
        <html lang="fr">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ asset('font/css/font-awesome.min.css') }}"  rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script type="text/javascript" src="{{ asset('js/burger.js') }}" defer></script>

        <title>{% block title %}Projet Symfony{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
<body>
    <header>
        <p id="burger" class="burger"></p>
        <h1><a href="{{ path('default') }}">Projet Symfony</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('default') }}">Accueil</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('app_logout') }}">DÃ©connexion</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_admin') }}">Admin</a></li>
                    {% endif %}
                {% else %}
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    <li><a href="{{ path('app_register') }}">Inscription</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <main>
    {% block body %}{% endblock %}
    </main>
</body>
<footer>

</footer>
</html>
