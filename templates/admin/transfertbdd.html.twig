{% extends 'baseadmin.html.twig' %}

{% block title %}Transfert de la base de donn√©e{% endblock %}

{% block body %}
    
    <div>

        {{ form_start(form) }}
            {{ form_row(form.json) }}
            <button type="submit">Ajouter</button>
        {{ form_end(form) }}

        <table>
            <thead>
            <tr>
                <th>Date du transfert :</th>
                <th>Admin :</th>
                <th>Fichier :</th>
            </tr>
            </thead>
            <tbody>
            {% for transfert in transfertbdd %}
                <tr>
                    <td> {{ transfert.date | format_datetime(locale='fr',pattern="dd-MM-Y") }} </td>
                    <td> {{ transfert.relation.nom }} </td>
                    <td> {{ transfert.jsonfilename }} </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
