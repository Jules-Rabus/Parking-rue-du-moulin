<!DOCTYPE html>
<html>
<head>
    <!DOCTYPE html>
    <html lang="fr">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ asset('font/css/font-awesome.min.css') }}"  rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <title>{% block title %}Admin Projet Symfony{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </head>
<body>
<header>
    <p id="burger" class="burger"></p>
    <h1><a href="{{ path('default') }}">Admin Projet Symfony</a></h1>
    <nav>
        <ul>
            <li><a href="{{ path('app_admin') }}">Réserver</a></li>
            <li><a href="{{ path('app_admin_planning') }}">Planning</a></li>
            <li><a href="{{ path('app_admin_planning_jour', {date: "now"|date("Y-m-d")}  ) }}">{{ "now"|date("Y-m-d") }}</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
            {% endif %}
            <li><a href="{{ path('default') }}">Accueil</a></li>
        </ul>
    </nav>
</header>
<main>
    {% block body %}{% endblock %}
</main>
</body>
<footer>

</footer>
<script type="text/javascript" src="{{ asset('js/burger.js') }}" ></script>
</html>
